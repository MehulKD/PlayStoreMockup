<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="160dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_background" >

        <ImageView
            android:id="@+id/productRowIcon"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/productRowTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/productRowIcon"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="4dp"
            android:lines="2"
            android:textColor="@color/greyCap"
            android:textSize="13dp" />

        <ImageButton
            android:id="@+id/productRowMenuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/productRowIcon"
            android:layout_marginRight="2dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_menu_moreoverflow_card_dark_normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/productRowRating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rate_mini_star_market_off" />

            <ImageView
                android:id="@+id/productRowRating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rate_mini_star_market_off" />

            <ImageView
                android:id="@+id/productRowRating3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rate_mini_star_market_off" />

            <ImageView
                android:id="@+id/productRowRating4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rate_mini_star_market_off" />

            <ImageView
                android:id="@+id/productRowRating5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rate_mini_star_market_off" />
        </LinearLayout>

        <TextView
            android:id="@+id/productRowPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="7dp"
            android:textColor="@color/greenText"
            android:textSize="11dp" />
    </RelativeLayout>

</LinearLayout>